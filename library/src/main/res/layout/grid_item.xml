<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/bottom_sheet_grid_item_size"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@android:id/icon"
            android:layout_width="@dimen/bottom_sheet_grid_item_icon_size"
            android:layout_height="@dimen/bottom_sheet_grid_item_icon_size"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:scaleType="centerInside"/>

    </RelativeLayout>

    <TextView
        android:id="@android:id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_grid_title_height"
        android:layout_marginBottom="@dimen/bottom_sheet_grid_item_vertical_spacing"
        android:layout_marginEnd="@dimen/bottom_sheet_grid_item_horizontal_spacing"
        android:layout_marginLeft="@dimen/bottom_sheet_grid_item_horizontal_spacing"
        android:layout_marginRight="@dimen/bottom_sheet_grid_item_horizontal_spacing"
        android:layout_marginStart="@dimen/bottom_sheet_grid_item_horizontal_spacing"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

</LinearLayout>