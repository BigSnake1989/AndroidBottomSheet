    <item name="bottom_sheet_grid_item_horizontal_padding" type="dimen">24dp</item>
    <item name="bottom_sheet_grid_padding_bottom" type="dimen">24dp</item>
    <item name="bottom_sheet_grid_padding_top" type="dimen">16dp</item>
    <item name="bottom_sheet_item_height" type="dimen">48dp</item>
